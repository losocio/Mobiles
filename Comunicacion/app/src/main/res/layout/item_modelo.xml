<?xml version="1.0" encoding="utf-8"?>

<!--Aspecto para cada item de la lista-->

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <ImageView
        android:id="@+id/imagenFila"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:Bottom_toBottomOf="@id/imagenFila"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imagenFila"
        app:layout_constraintTop_toTopOf="@id/imagenFila"
        >



    <TextView
        android:id="@+id/tituloFila"
        android:testSize="25sp"
        android:gravity="center"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="TITULO"

        />

    <TextView
        android:testSize="25sp"
        android:gravity="center"
        android:id="@+id/subtituloFila"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="TITULO"

        />


